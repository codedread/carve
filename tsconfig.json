{
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "src/**/*.test.ts",
  ],
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@sinonjs/fake-timers": ["./node_modules/@types/sinonjs__fake-timers"]
    }
  }
}
